{
  "expo": {
    "name": "Mixlead",
    "slug": "mixlead",
    "version": "0.5.1",
    "orientation": "portrait",
    "icon": "./assets/adaptive-icon.png",
    "userInterfaceStyle": "light",
    "scheme": "mixlead",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Necesitamos tu ubicación para mostrarla en el mapa.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Permiso 'Siempre' (si es necesario para futuras funciones)."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ],
      "package": "com.davidbrea_10.mixlead",
      "softwareKeyboardLayoutMode": "pan" 
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Necesitamos tu ubicación para mostrarla en el mapa."
        }
      ],
      "expo-localization"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "c508fbd0-87eb-4f45-b7ac-231caef02a7e"
      }
    }
  }
}